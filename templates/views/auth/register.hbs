<section>

    <div id="register-form-container">
        <h1>Register</h1>

        {{#ifCond errors.length ">" 0 }}
            <div class="alert alert-error alert-show">
                <button type="button" class="close"><span>&times;</span></button>
                <div class="alert-msg">
                    {{errors}}
                    This is a rather long error message
                </div>      
            </div>
        {{/ifCond}}

        <div id="register-form">
            <form action="#" method="post">
                <div class="validation-group">
                    <input type="text" name="username" placeholder="Name" id="username" autocomplete="off">
                    <p>Error Message</p>
                </div>
                <div class="validation-group">
                    <input type="text" name="email" placeholder="Email" id="email" autocomplete="off">
                    <p>Error Message</p>
                </div>
                <div class="validation-group">
                    <input type="password" name="password" placeholder="Password" id="password">
                    <p>Error Message</p>
                </div>
                <div class="validation-group">
                    <input type="password" name="confirmPassword" placeholder="Confirm Password" id="confirmPassword">
                    <p>Error Message</p>
                </div>
                <div class="submit-group">
                    <input type="submit" name="registerBtn" value="Register" class="submit-btn">
                </div> 
            </form>
            <p>Existing user? <a href="/login">Login</a></p>
        </div>
    </div>

</section>